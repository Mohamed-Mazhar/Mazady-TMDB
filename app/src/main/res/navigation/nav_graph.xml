<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment"
    >

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.mazadytmdb.features.movies.presentation.screen.MoviesScreen"
        android:label="Movies"
        tools:layout="@layout/movies_screen">
        <action
            android:id="@+id/action_moviesListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsScreen" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailsScreen"
        android:name="com.example.mazadytmdb.features.moviedetails.presentation.screen.MovieDetailsScreen"
        android:label="Movie Details"
        tools:layout="@layout/movie_details_screen">
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>